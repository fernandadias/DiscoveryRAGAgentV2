# Configuração do Vercel para o frontend React
{
  "name": "discovery-rag-agent-v2",
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/client/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/client/favicon.ico"
    },
    {
      "src": "/asset-manifest.json",
      "dest": "/client/asset-manifest.json"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://discovery-rag-agent-v2-api.onrender.com"
  }
}
